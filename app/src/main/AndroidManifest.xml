<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FollowtheBookPath"
        tools:targetApi="31">

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- MainActivity는 외부에서 실행 가능 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LibraryActivity -->
        <activity
            android:name=".LibraryActivity"
            android:exported="true"> <!-- LibraryActivity도 외부에서 실행 가능 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- bookRecordActivity -->
        <activity
            android:name=".bookRecordActivity"
            android:exported="false" /> <!-- 외부에서 실행 불가 -->

        <activity
            android:name=".MemoActivity"
            />
        <activity
            android:name=".MemoWriteActivity"
            />


    </application>
</manifest>
